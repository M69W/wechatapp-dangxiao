<form bindsubmit="createOrUpdateAddress">
  <view class="weui-cells__title"></view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <image src="/images/icon/businessman.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">
        <input name="name" class="weui-input" value="{{userinfo.address.name}}" placeholder="真实姓名" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <image src="/images/icon/iphone.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">
        <input name="mobile" class="weui-input" value="{{userinfo.address.mobile}}" placeholder="手机号" />
      </view>
    </view>
  </view>
  <view class="weui-btn-area">
    <button formType="submit" style="background-color:#cb1c1d;" class="weui-btn" type="primary">保存</button>
  </view>
</form>
  <loading hidden="{{loadingHidden}}">
    加载中...
  </loading>