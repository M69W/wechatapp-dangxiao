.show-container{
  padding: 0 20rpx;
}

.show-item{
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  position: relative;
  height: 220rpx;
  width: 100%; 
}
.show-item image,.show-item-text,.title{
  position: absolute;
  left: 0;
  bottom: 0;
}
.show-item image{
  border-radius:15rpx;
  height: 220rpx;
  width: 100%;
  box-shadow:0rpx 0rpx 10rpx #999; 
}
.show-item-text{
  width: 100%;
  height: 60rpx;
  background-color: #000;
  opacity: 0.5;
  border-radius:0 0 15rpx 15rpx;
  color: #fff;
}
.title{
  z-index: 2;
  line-height: 60rpx;
  color: #fff;
  margin-left: 30rpx;
  font-size: 30rpx;
}

.border-box{
  width: 100%;
  z-index: 2;
  border: 10rpx solid #cb1c1d;
  border-radius:15rpx;
  box-shadow:0rpx 0rpx 10rpx #333 inset; 
}